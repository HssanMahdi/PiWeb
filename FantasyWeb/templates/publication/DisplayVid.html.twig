{% extends 'baseDashboard.html.twig' %}
{% block westpage %}
    <div class="pcoded-inner-content" xmlns="http://www.w3.org/1999/html">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Page-body start -->
                <div class="page-body">
                    <!-- Basic table card start -->
                    <div class="card text-center">
                        <div class="card-header">
                            <h3 style="color: #e02335"> <i class="far fa-file-video" > </i>&nbsp;&nbsp;Liste Des Highlights</h3>
                            <a href="{{ path('AddPub') }}" ><button type="button"  class="btn btn-outline-dark">Ajouter Highlights</button></a>
                        </div>


                    </div>

                    <div class="row">
                        {% for e in publication %}
                            <div class="col-sm-6">
                                <div class="card">
                                    <div class="card-body">

                                        <a  href="{{ path('PlayVid',{'id':e.idvideo}) }}"><img src="{{ asset('images/playVid.png') }}" alt="image description" height="100px" width="90px"></a>
                                        &nbsp;&nbsp;
                                        <div class="d-inline-block">
                                            <h5>{{e.getVideoname()}}</h5>
                                            <br>
                                            <i class="far fa-calendar-alt"></i>&nbsp;</a>Date : {{e.getDatePub()}}
                                        </div>
                                        <div class="pull-right">
                                            <a href="{{ path('DeletePub',{'id':e.idvideo}) }}"> <i class="fa fa-trash fa-lg"  style="color:#e02335" ></i></a> &nbsp;&nbsp;
                                            <a href="{{ path('UpdatePub',{'id':e.idvideo}) }}"> <i class="fas fa-edit fa-lg"   ></i></a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <!-- Inverse table card end -->
                    <!-- Hover table card start -->


                </div>
                <!-- Page-body end -->
            </div>
        </div>
        <!-- Main-body end -->

        <div id="styleSelector">

        </div>
    </div>
{% endblock %}