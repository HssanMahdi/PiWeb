{% extends 'baseDashboard.html.twig' %}

                                    {% block westpage %}

                                        <div id="divs">
                                            <input type="text" id="search" placeholder="recherche par nom de produit">
                                            <input type="text" id="search2" placeholder="recherche par nom de categorie">
                                        </div>

                                        <table id="t" class="table">
                                            <thead>
                                            <tr>
                                                <th>IdProduit</th>
                                                <th>IdCategorie</th>
                                                <th>NomProduit</th>
                                                <th>NomCategorie</th>
                                                <th>PrixUnitaire</th>
                                                <th>Quantite</th>
                                                <th>Image</th>
                                                <th>Description</th>
                                                <th>actions</th>
                                            </tr>
                                            </thead>
                                            <tbody id="all">
                                            {% for produit in produits %}
                                                <tr>
                                                    <td>{{ produit.idProduit }}</td>
                                                    <td>{{ produit.idCategorie }}</td>
                                                    <td>{{ produit.nomProduit }}</td>
                                                    <td>{{ produit.nomCategorie }}</td>
                                                    <td>{{ produit.prixUnitaire }}</td>
                                                    <td>{{ produit.quantite }}</td>
                                                    <td> <img src="{{ asset('uploads/images/' ~ produit.image) }}" alt="" style="width: 100px;height:100px"> </td>
                                                    <td>{{ produit.description }}</td>
                                                    <td>

                                                        <a href="{{ path('produit_edit', {'idProduit': produit.idProduit}) }}">edit</a>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="9">no records found</td>
                                                </tr>
                                            {% endfor %}

                                            </tbody>

                                            <tbody id="search">
                                            </tbody>
                                        </table>


                                        <a href="{{ path('produit_new') }}">Create new</a>
                                        <br>
                                        <a href="{{ path('produit_stat') }}"> statistique </a>



                                     <div class="align-content-center">{{ knp_pagination_render(produits) }}</div>








                                        <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
                                        <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
                                        <script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap4.min.js"></script>

                                        <script>
                                        $(document).ready(function ()
                                        {

                                        $('#mydatatable').DataTable();
                                        });
                                        </script>














                                    {% endblock %}







