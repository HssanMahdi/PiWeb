{% extends 'baseDashboard.html.twig' %}
{% block westpage %}
    <div class="row">
        <div class="col-sm-12">
            <!-- Basic Form Inputs card start -->
            <div class="card">
                <div class="card-header">
                    <h5>Ajouter Admin Systeme</h5>

                </div>
                <div class="card-block">
                    <h4 class="sub-title">Remplir Les Champs</h4>
                    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="color:#e40505;">Nom</label>
                        <div class="col-sm-8">
                            {{ form_errors(form.nomUser) }}
                            {{ form_widget(form.nomUser, { 'attr': {'class': 'form-control','placeholder': ' Entrer votre nom '} }) }}
                        </div>
                    </div>
                    <br>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="color:#e40505;">Email</label>
                        <div class="col-sm-8">
                            {{ form_errors(form.email) }}
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control','placeholder': 'Entrer votre email'} }) }}
                        </div>
                    </div>
                    <br>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="color:#e40505;">Mot de passe</label>
                        <div class="col-sm-8">
                            {{ form_errors(form.password) }}
                            {{ form_widget(form.password, { 'attr': {'class': 'form-control','placeholder': 'Entrer votre mdp'} }) }}
                        </div>
                    </div>
                    <div align="center">
                        {{ form_widget(form.Valider, { 'attr': {'class': 'btn btn-outline-danger'} }) }}
                    </div>

                    {{ form_end(form) }}


                </div>
            </div>
            <!-- Basic Form Inputs card end -->
        </div>
    </div>
{% endblock %}