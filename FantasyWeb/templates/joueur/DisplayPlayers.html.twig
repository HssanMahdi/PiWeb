{% extends 'base.html.twig' %}

{% block bodyakhel %}
    <div class="tg-banner tg-haslayout">
        <div class="tg-imglayer">
            <img src="{{asset('images/bg-pattran.png')}}" alt="image desctription">
        </div>
        <div class="container">
            <div class="row">
                <div class="tg-banner-content tg-haslayout">
                    <div class="tg-pagetitle">
                        <h1>La liste des joueurs</h1>
                    </div>
                    <ol class="tg-breadcrumb">

                        <li class="active">La liste des joueurs</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block body %}
    <main id="tg-main" class="tg-main tg-haslayout">
        <!--************************************
                Top Rated Player Start
        *************************************-->
        <section class="tg-main-section tg-haslayout">
            <div class="container">
                <div class="tg-section-name">
                    <h2>La liste des joueurs</h2>
                </div>
                <div class="col-sm-11 col-xs-11 pull-right">
                    <div class="row">
                        <div class="tg-player-grid2 tg-haslayout">
                            <div id="tg-player-slider" class="tg-player-slider tg-haslayout">
                                <div class="swiper-wrapper">
                                    {% for j in joueur %}
                                    <div class="swiper-slide">
                                        <figure class="tg-postimg">
                                             <img src="{{ asset('uploads/'~j.logoJoueur) }}"  alt="image description" height="30px">
                                            <!--<div class="tg-img-hover">-->
                                            <figcaption class="tg-img-hover">
                                                <div class="tg-theme-tag">{{j.position}}</div>
                                                <div class="tg-section-heading">
                                                   <H3><a href="#">{{j.nomJoueur}} {{j.prenomJoueur}}</a></H3>

                                                   <div class="rating" role="optgroup">
                                                   {% if j.rating !=0 %}
                                                   {% for i in 1..j.rating  %}
                                                      <i class="fa fa-star rating-star"  role="radio"></i>
                                                    {% endfor %}
                                                    {% endif %}
                                                    </div>
                                                </div>
                                                <div class="tg-description">
                                                    <ul class="tg-playernameplusgoadtime">
                                                        <li>Prix : {{j.prixJoueur}} </li>
                                                        <li>Score : {{j.scoreJoueur}} </li>
                                                        <li>Equipe : {{j.idEquipe}} </li>
                                                        <li><a href="{{ path('AddRates',{'id':j.idJoueur}) }}">Evaluer</a></li>

                                                    </ul>
                                                </div>

                                            </figcaption>
                                            <!--</div>-->
                                        </figure>
                                    </div>
                                    {% endfor %}
                                </div>


                                <div class="tg-themebtnnext"><span class="fa fa-angle-down"></span></div>
                                <div class="tg-themebtnprev"><span class="fa fa-angle-up"></span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

{% endblock %}
