{% extends 'baseDashboard.html.twig' %}
{% block westpage %}
    <div class="row">
        <div class="col-sm-12">
            <!-- Basic Form Inputs card start -->
            <div class="card">
                <div class="card-header">
                    <h5>Ajouter un Match</h5>

                </div>
                <div class="card-block">
                    <h4 class="sub-title">Remplir Les Champs</h4>
                    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="color:#e40505;">Titre</label>
                        <div class="col-sm-8">
                            {{ form_widget(form.titre, { 'attr': {'class': 'form-control','placeholder': ' Titre '} }) }}
                            <H5 style="color:red">{{ form_errors(form.titre) }}</H5>
                        </div>
                    </div>
                    <br>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="color:#e40505;">Equipe A</label>
                        <div class="col-sm-8">
                            {{ form_errors(form.idEquipea) }}
                            {{ form_widget(form.idEquipea, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <br>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="color:#e40505;">Equipe B</label>
                        <div class="col-sm-8">
                            {{ form_errors(form.idEquipeb) }}
                            {{ form_widget(form.idEquipeb, { 'attr': {'class':'form-control'} }) }}
                        </div>
                    </div>
                    <br>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="color:#e40505;">Date Match</label>
                        <div class="col-sm-8">
                            {{ form_errors(form.datematch) }}
                            {{ form_widget(form.datematch, { 'attr': {'class':'form-control'} }) }}
                            <h5 style="color:red">{{ err }}</h5>
                        </div>
                    </div>


                    <div align="center">
                        {{ form_widget(form.Ajouter, { 'attr': {'class': 'btn btn-outline-danger'} }) }}
                    </div>

                    {{ form_end(form) }}


                </div>
            </div>
            <!-- Basic Form Inputs card end -->
        </div>
    </div>
{% endblock %}